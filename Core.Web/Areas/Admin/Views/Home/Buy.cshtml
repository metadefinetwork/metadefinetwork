@section scripts{
    <script src="~/admin-app/shared/dapp-helper.js" asp-append-version="true"></script>
    <script src="~/admin-app/shared/dapp-transaction.js"></script>
    <script>
        var dapp = new DAppHelper.DApp();
        dapp.init();

        var module = new DAppTransactionController();
        module.initialize();
    </script>

}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container">
            <div class="row gy-5 g-xl-8">
                <div class="col-xl-12">
                    <div class="card card-xxl-stretch mb-5 mb-xl-8">
                        <div class="card-header border-0 pt-5">
                            <div class="align-items-start card-toolbar">
                                <h1 class="text-dark fw-bolder fs-3 my-1">
                                    Buy MAR
                                </h1>
                            </div>
                        </div>
                        <div class="card-body py-3">
                            <div class="card-body d-flex flex-center flex-column p-9">
                                <form class="form w-100 dapp_form d-none">
                                    <div class="row mb-6 ">
                                        <label class="col-lg-4 col-form-label required fw-bold fs-6">BNB Amount</label>
                                        <div class="col-lg-8 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid">
                                            <input type="text" name="company" class="form-control form-control-lg form-control-solid dapp_amount">
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>
                                    </div>
                                    <div class="row mb-6">
                                        <label class="col-lg-4 col-form-label required fw-bold fs-6">MAR Amount</label>
                                        <div class="col-lg-8 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid">
                                            <input type="text" name="company" class="form-control form-control-lg form-control-solid dapp_token-amount" disabled>
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>
                                    </div>
                                    <div class="row mb-6">
                                        <label class="col-lg-4 col-form-label required fw-bold fs-6">Your wallet</label>
                                        <div class="col-lg-8 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid">
                                            <input type="text" name="company" class="form-control form-control-lg form-control-solid dapp_address" disabled>
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>
                                    </div>
                                </form>
                                <button type="button" class="btn btn-sm btn-light-primary dapp_button" data-action="presale">
                                    <span class="dapp_button_connected d-none">Buy</span>
                                    <span class="dapp_button_disconnected">Connect Wallet</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row gy-5 g-xl-8">
                <div class="col-xl-12">
                    <div class="card card-xxl-stretch mb-5 mb-xl-8">
                        <div class="card-header border-0 pt-5">
                            <div class="align-items-start card-toolbar">
                                <h1 class="text-dark fw-bolder fs-3 my-1">
                                    Transaction History
                                </h1>
                                <input type="text" id="txt-search-keyword" class="form-control form-control-white form-control-sm w-150px ps-9" placeholder="Search">
                            </div>
                        </div>
                        <div class="card-body border-0 pt-5">
                            <div class="table-responsive">
                                <div class="dapp_transactions d-none" data-type="presale">
                                    <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                        <thead>
                                            <tr class="fw-bolder text-muted">
                                                <th class="min-w-120px">
                                                    Address From<br />
                                                    Address To<br />
                                                    Transaction Hash
                                                </th>
                                                <th class="min-w-140px">Amount (BNB) <br />Amount (MAR)</th>
                                                <th class="min-w-140px">BNB TransactionHash <br />MAR TransactionHash</th>
                                                <th class="min-w-100px">
                                                    Create Date
                                                </th>
                                                <th class="min-w-100px">
                                                    Hardware Wallet
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbl-content"></tbody>
                                    </table>
                                </div>
                                <div class="text-center dapp_no-transactions d-none">Please, connect your wallet.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container">
        </div>
    </div>
</div>
@Html.AntiForgeryToken()

<script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>
                <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-7">{{AddressFrom}}</a>
                <a href="#" class="text-dark fw-bolder text-hover-primary d-block fs-7">{{AddressTo}}</a>
            </td>
            <td>
                <a href="#" class=" fw-bold text-muted text-hover-primary d-block fs-7">{{BNBAmount}}</a>
                <a href="#" class=" fw-bold text-muted text-hover-primary d-block fs-7">{{TokenAmount}}</a>
            </td>
            <td>
                <a href="#" class="text-dark fw-bold text-hover-primary d-block fs-7">{{BNBTransactionHash}}</a>
                <a href="#" class="text-dark fw-bold text-hover-primary d-block fs-7">{{TokenTransactionHash}}</a>
            </td>
            <td>
                <span class="text-muted fw-bold text-muted d-block fs-7">{{DateCreated}}</span>
            </td>
            <td>
                <span class="text-muted fw-bold text-muted d-block fs-7">{{WalletType}}</span>
            </td>
        </tr>
</script>