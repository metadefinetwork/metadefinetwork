                                                        <path d="M7,13 L17,13 C19.209139,13 21,14.790861 21,17 C21,19.209139 19.209139,21 17,21 L7,21 C4.790861,21 3,19.209139 3,17 C3,14.790861 4.790861,13 7,13 Z M17,19 C18.1045695,19 19,18.1045695 19,17 C19,15.8954305 18.1045695,15 17,15 C15.8954305,15 15,15.8954305 15,17 C15,18.1045695 15.8954305,19 17,19 Z" fill="#000000" opacity="0.3"></path>
                                                    </g>
                                                </svg>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card mb-5 mb-xl-8">
                        <div class="card-body rounded bg-light-danger">
                            <div class="card rounded border-danger border border-dashed p-6">
                                <div class="d-flex flex-column py-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/MVR.png" alt="" class="me-4 h-60px" />
                                        <div>
                                            <div class="fs-5 fw-bolder">Wallet MVR</div>
                                            <div class="fs-5 fw-bold text-gray-800"><span class="numberFormat" id="MVRBalance">0.00</span> MVR</div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center mt-4">
                                        <button class="btn btn-sm btn-flex btn-light btn-active-danger fw-bolder me-3" disabled>Deposit</button>
                                        <button class="btn btn-sm btn-flex btn-light btn-active-danger fw-bolder me-3" disabled>Withdraw</button>
                                        <a href="/mvr-transaction" class="btn btn-sm btn-icon btn-flex btn-light btn-active-danger fw-bolder">
                                            <span class="svg-icon svg-icon-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="0" y="0" width="24" height="24"></rect>
                                                        <path d="M7,3 L17,3 C19.209139,3 21,4.790861 21,7 C21,9.209139 19.209139,11 17,11 L7,11 C4.790861,11 3,9.209139 3,7 C3,4.790861 4.790861,3 7,3 Z M7,9 C8.1045695,9 9,8.1045695 9,7 C9,5.8954305 8.1045695,5 7,5 C5.8954305,5 5,5.8954305 5,7 C5,8.1045695 5.8954305,9 7,9 Z" fill="#000000"></path>
                                                        <path d="M7,13 L17,13 C19.209139,13 21,14.790861 21,17 C21,19.209139 19.209139,21 17,21 L7,21 C4.790861,21 3,19.209139 3,17 C3,14.790861 4.790861,13 7,13 Z M17,19 C18.1045695,19 19,18.1045695 19,17 C19,15.8954305 18.1045695,15 17,15 C15.8954305,15 15,15.8954305 15,17 C15,18.1045695 15.8954305,19 17,19 Z" fill="#000000" opacity="0.3"></path>
                                                    </g>
                                                </svg>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card mb-5 mb-xl-8">
                        <div class="card-body rounded bg-light-warning">
                            <div class="card  rounded border-warning border border-dashed p-6">
                                <div class="d-flex flex-column py-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/bnbaffiliate.png" alt="" class="me-4 h-60px" />
                                        <div>
                                            <div class="fs-5 fw-bolder">Wallet BNB</div>
                                            <div class="fs-5 fw-bold text-gray-800"><span class="numberFormat" id="BNBBalance">0.00</span> BNB</div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center mt-4">
                                        <button class="btn btn-sm btn-flex btn-light btn-active-warning fw-bolder me-3" disabled>Deposit</button>
                                        <button class="btn btn-sm btn-flex btn-light btn-active-warning fw-bolder me-3" disabled>Withdraw</button>
                                        <a href="/bnb-transaction" class="btn btn-sm btn-icon btn-flex btn-light btn-active-warning fw-bolder">
                                            <span class="svg-icon svg-icon-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="0" y="0" width="24" height="24"></rect>
                                                        <path d="M7,3 L17,3 C19.209139,3 21,4.790861 21,7 C21,9.209139 19.209139,11 17,11 L7,11 C4.790861,11 3,9.209139 3,7 C3,4.790861 4.790861,3 7,3 Z M7,9 C8.1045695,9 9,8.1045695 9,7 C9,5.8954305 8.1045695,5 7,5 C5.8954305,5 5,5.8954305 5,7 C5,8.1045695 5.8954305,9 7,9 Z" fill="#000000"></path>
                                                        <path d="M7,13 L17,13 C19.209139,13 21,14.790861 21,17 C21,19.209139 19.209139,21 17,21 L7,21 C4.790861,21 3,19.209139 3,17 C3,14.790861 4.790861,13 7,13 Z M17,19 C18.1045695,19 19,18.1045695 19,17 C19,15.8954305 18.1045695,15 17,15 C15.8954305,15 15,15.8954305 15,17 C15,18.1045695 15.8954305,19 17,19 Z" fill="#000000" opacity="0.3"></path>
                                                    </g>
                                                </svg>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header align-items-center border-0">
                    <h3 class="card-title fw-bolder text-dark fs-5">Request Transaction</h3>
                </div>
                <div class="card-body py-3">
                    <div class="table-responsive">
                        <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                            <thead>
                                <tr class="fw-bolder">
                                    <th class="min-w-100px">
                                        Type
                                    </th>
                                    <th class="min-w-90px">Amount</th>
                                    <th class="min-w-90px">Fee<br />FeeAmount</th>
                                    <th class="min-w-90px">Amount Receive</th>
                                    <th class="">
                                        Address To
                                    </th>
                                    <th class="min-w-90px">
                                        Status
                                    </th>
                                    <th class="min-w-150px">
                                        Created Date
                                        <br />
                                        Updated Date
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="tbl-content"></tbody>
                        </table>
                    </div>
                    @await Component.InvokeAsync("Paging")
                </div>
            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>
            <span class="text-primary fw-bold text-hover-primary d-block fs-7">{{TypeName}}</span>
        </td>
        <td>
            <span class="text-dark fw-bold text-hover-primary d-block fs-7">{{Amount}} {{UnitName}}</span>
        </td>
        <td>
            <a href="#" class=" fw-bold text-danger text-hover-primary d-block fs-7">{{Fee}}%</a>
            <a href="#" class=" fw-bold text-muted text-hover-primary d-block fs-7">{{FeeAmount}} {{UnitName}}</a>
        </td>
        <td>
            <span class="text-dark fw-bold text-hover-primary d-block fs-7">{{AmountReceive}} {{UnitName}}</span>
        </td>
        <td>
            <span class="text-dark fw-bold text-hover-primary d-block fs-7">{{AddressTo}}</span>
        </td>
        <td>
            <span class="fw-bold text-muted d-block fs-7">{{{StatusName}}}</span>
        </td>
        <td>
            <span class="text-muted fw-bold text-muted d-block fs-7">{{DateCreated}}</span>
            <span class="text-muted fw-bold text-muted d-block fs-7">{{DateUpdated}}</span>
        </td>
    </tr>
</script>

<div class="modal fade" id="ic_modal_withdraw_mar">
    <div class="modal-dialog modal-dialog-centered mw-500px">
        <div class="modal-content rounded">
            <div class="modal-header pb-0 border-0 justify-content-end">
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000">
                                <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" />
                                <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" />
                            </g>
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-10">
                <form class="form">
                    @Html.AntiForgeryToken()
                    <div class="mb-6 text-center">
                        <h2 class="mb-3">Wallet MAR</h2>
                        <div class="text-muted fw-bold fs-5">
                            <a href="#" class="link-primary fw-bolder">Minimum withdraw 10,000 MAR</a>
                        </div>
                    </div>

                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Wallet MAR</label>
                            <a class="link-dark fs-6 fw-bolder">MAR</a>
                        </div>
                        <input class="form-control form-control-lg form-control-solid MARBalance" type="text" readonly autocomplete="off" />
                    </div>
                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Amount</label>
                            <a class="link-dark fs-6 fw-bolder">MAR</a>
                        </div>
                        <input class="form-control form-control-lg form-control-solid numberFormat" type="text" id="txtMARAmount" autocomplete="off" />
                        <span class="form-label fs-7 mt-1 text-danger lblMARErrorInsufficient"></span>
                    </div>
                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Fee</label>
                            <a class="link-danger fs-6 fw-bolder">2%</a>
                        </div>
                        <input class="form-control form-control-lg form-control-solid" value="0" type="text" readonly id="txtMARFeeAmount" />
                    </div>
                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Receive Amount</label>
                            <a class="link-dark fs-6 fw-bolder">MAR</a>
                        </div>
                        <input class="form-control form-control-lg form-control-solid" value="0" type="text" readonly id="txtMARReceiveAmount" />
                    </div>
                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Address Receive</label>
                            <a class="link-warning fs-6 fw-bolder">Bep20 address (smart chain)</a>
                        </div>
                        <input class="form-control form-control-lg form-control-solid" type="text" readonly value="@Model.BNBBEP20PublishKey" id="txtMARAddressTo" autocomplete="off" />
                    </div>

                    <div class="text-center">
                        <a href="#" id="btnConfirmWithdrawMAR" class="btn btn-light-dark btn-active-color-success me-2 mb-2">
                            Submit
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
